---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-application-deployment
spec:
  selector:
    matchLabels:
      app: nginx-application
  replicas: 2 # tells deployment to run 2 pods matching the template
  template:
    metadata:
      labels:
        app: nginx-application
    spec:
      containers:
      - name: nginx-application
        image: engineerflaconi/nginx-application:0.2
        ports:
        - containerPort: 8081
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-application-svc
spec:
  ports:
  - port: 80
    targetPort: 8081
    protocol: TCP
  selector:
    app: nginx-application
  type: LoadBalancer
